{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "CRA Client",
    "version": "0.1.20"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.renomo.cra.client",
      "category": "Business",
      "shortDescription": "CRA Desktop client wrapper",
      "icon": ["icons/icon.ico"],
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "template": "windows/nsis/installer.nsi"
        }
      }
    },
    "windows": []
  }
}
